<div class="row justify-content-md-center">
    <div class="col-xxl-4 col-xl-6 col-md-6 col">
        <div class="card">
            <div class="card-body">
                <%= form_tag search_url, role: "search", method: :get do %>
                <div class="row mb-3">
                    <div class="col pe-1">
                    <%= text_field_tag :request, params[:request], autocomplete: :off, class: "form-control", placeholder: "Введите имя пользователя" %>
                    </div>
                    <div class="col-auto ps-1">
                    <%= submit_tag "Найти", :name => nil, class: "btn btn-primary" %>
                    </div>
                </div>
                <% end %>
                <% if @result != nil %>
                <turbo-frame>
                    <% if @result.empty? == false %>
                    <ul class="list-group list-group-flush">
                        <% @result.each do |user| %>
                            <%= link_to render("search_list", user: user), profile_path(user), data: {turbo: false}, class: "list-group-item list-group-item-action" %>
                        <% end %>
                    </ul>
                    <% else %>
                        <p class="fs-5" style="text-align: center">Пользователи не найдены</p>
                    <% end %>
                </turbo-frame>
                <% end %>
            </div>
        </div>
    </div>
</div>