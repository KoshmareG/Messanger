<%= form_for @room, method: "put" do |f| %>
    <div class="row mb-2 pt-3">
        <div class="col pe-1">
            <%= f.file_field :image, direct_upload: true, class: "form-control form-control-sm" %>
        </div>
        <div class="col-auto ps-1">
            <%= f.button "Загрузить", class: "btn btn-primary btn-sm" %>
        </div>
    </div>
<% end %>

<%= form_for @room, method: "put" do |f| %>
    <div class="row">
        <div class="col pe-1">
            <%= f.text_field :name, class: "form-control form-control-sm" %>
        </div>
        <div class="col-auto ps-1">
            <%= f.button "Изменить", class: "btn btn-primary btn-sm" %>
        </div>
    </div>
<% end %>
